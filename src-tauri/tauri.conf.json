{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "PBJT Library",
    "version": "1.0.0",
    "identifier": "com.pbjt.library",
    "build": {
        "beforeDevCommand": "bun run dev",
        "devUrl": "http://localhost:5173",
        "beforeBuildCommand": "bun run build",
        "frontendDist": "../dist"
    },
    "app": {
        "windows": [
            {
                "title": "PBJT Library Management System",
                "width": 1280,
                "height": 800,
                "resizable": true,
                "fullscreen": false,
                "minWidth": 1024,
                "minHeight": 600
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ],
        "windows": {
            "certificateThumbprint": null,
            "digestAlgorithm": "sha256",
            "timestampUrl": ""
        },
        "longDescription": "A modern library management system for PBJT (Politeknik Baja Tegal) built with React and Tauri",
        "shortDescription": "PBJT Library Management System",
        "linux": {
            "deb": {
                "depends": []
            }
        }
    }
}